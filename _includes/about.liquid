    <script>
      document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.profile-social').forEach(function(link) {
          link.addEventListener('mouseenter', function() {
            var label = link.querySelector('.profile-social-label');
            if (label) {
              label.style.display = 'block';
              setTimeout(function() { label.style.opacity = '1'; }, 10);
            }
          });
          link.addEventListener('mouseleave', function() {
            var label = link.querySelector('.profile-social-label');
            if (label) {
              label.style.opacity = '0';
              setTimeout(function() { label.style.display = 'none'; }, 200);
            }
          });
